<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div id="secrets-box" style="margin-top: 5%; margin-bottom: 5%;" class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Make a post lads</h1>

    <% usersWithSecrets.forEach(function(user){ %>
      <% user.secrets.forEach((secret) => { %>
        <p class="post-user"><%=user.username%></p>
        <div class="secret-text-box">
          <p>&nbsp &nbsp<%=secret%>&nbsp &nbsp</p>
        </div>
      <% }) %>
    <% }); %>

    <hr>

    <div>
      <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Post</a>
    </div>

    <div>
      <a id="logout-btn" class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
